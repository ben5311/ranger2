{
    "name": "ranger-workspaces",
    "private": true,
    "engineStrict": true,
    "engines": {
        "npm": ">= 7.7.0"
    },
    "scripts": {
        "build": "npm run build --workspace ranger-lang && tsc --build --clean && tsc -b tsconfig.json",
        "watch": "concurrently -n langium,tsc -c yellow,blue \"npm run watch --workspace ranger-lang\" \"tsc -b tsconfig.json --watch\"",
        "lint": "eslint packages --ext ts",
        "test": "vitest",
        "test:once": "vitest run",
        "package:cli": "npm run package --workspace ranger-lang",
        "package:vscode": "npm run package --workspace ranger-vscode",
        "publish:vscode": "npm run publish --workspace ranger-vscode",
        "publish:npm": "npm publish --workspace ranger-lang"
    },
    "pre-commit": {
        "run": [
            "lint",
            "test:once"
        ],
        "silent": true
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "~5.51.0",
        "@typescript-eslint/parser": "~5.51.0",
        "@vitest/ui": "~0.28.4",
        "concurrently": "^7.6.0",
        "esbuild": "~0.18.4",
        "eslint": "~8.33.0",
        "pre-commit": "~1.2.2",
        "typescript": "~4.9.5",
        "vitest": "~0.29.2"
    },
    "workspaces": [
        "packages/*"
    ]
}
