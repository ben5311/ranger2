{
    "name": "ranger-workspaces",
    "private": true,
    "engineStrict": true,
    "engines": {
        "npm": ">= 7.7.0"
    },
    "scripts": {
        "watch": "concurrently -n tsc,workspace -c blue,yellow \"tsc -b tsconfig.json --watch\" \"npm run watch --workspaces --if-present\"",
        "lint": "eslint packages --ext ts",
        "test": "vitest",
        "test:once": "vitest run"
    },
    "pre-commit": {
        "run": [
            "lint",
            "test:once"
        ],
        "silent": true
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "eslint": "~8.33.0",
        "pre-commit": "~1.2.2",
        "typescript": "~4.9.5",
        "vitest": "^0.29.2"
    },
    "workspaces": [
        "packages/*"
    ]
}
