{
    "name": "ranger",
    "displayName": "Ranger",
    "description": "A Test data generator",
    "version": "0.0.1",
    "publisher": "Benjamin Heimann",
    "icon": "./resources/langium-logo.png",
    "categories": ["Testing"],
    "engines": {"vscode": "^1.67.0"},
    "repository": {
        "type": "git",
        "url": "https://github.com/ben5311/ranger2"
    },
    "contributes": {
        "languages": [{
            "id": "ranger",
            "aliases": ["Ranger", "ranger"],
            "extensions": [".ranger"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ranger",
            "scopeName": "source.ranger",
            "path": "./syntaxes/ranger.tmLanguage.json"
        }],
        "commands": [
            {"command": "ranger.toggleDebugView", "title": "Ranger: Toggle Debug View"}
        ],
        "menus": {
            "editor/context": [
                {"command": "ranger.toggleDebugView", "group": "navigation","when": "resourceLangId == ranger"}
            ]
        }
    },
    "activationEvents": ["onLanguage:ranger"],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "ranger": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "build": "langium generate && tsc -b tsconfig.json",
        "build:bundle:extension": "esbuild ./src/extension.ts src/language-server/main.ts --bundle --outdir=out --external:vscode --format=cjs --platform=node --minify",
        "build:bundle:webworker": "esbuild ./src/language-server/main.ts --bundle --outdir=out --format=iife --minify",
        "watch": "concurrently \"langium generate --watch\" \"tsc -b tsconfig.json --watch\"",
        "lint": "eslint src --ext ts",
        "test": "vitest",
        "test-ui": "vitest --ui",
        "package": "npm run build:bundle:extension && vsce package"
    },
    "dependencies": {
        "chevrotain": "~10.4.2",
        "chalk": "~4.1.2",
        "commander": "~10.0.0",
        "langium": "~1.1.0",
        "lodash": "~4.17.21",
        "random-js": "~2.1.0",
        "vscode-languageclient": "~8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
        "@types/lodash": "~4.14.192",
        "@types/node": "~16.18.11",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~5.51.0",
        "@typescript-eslint/parser": "~5.51.0",
        "@vitest/ui": "~0.28.4",
        "@vscode/vsce": "~2.18.0",
        "concurrently": "^7.6.0",
        "dedent-js": "~1.0.1",
        "esbuild": "~0.17.11",
        "eslint": "~8.33.0",
        "langium-cli": "~1.1.0",
        "typescript": "~4.9.5",
        "vitest": "^0.29.2"
    }
}
