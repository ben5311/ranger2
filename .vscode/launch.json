// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/ranger-vscode",
                "${workspaceFolder}/examples",
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/node_modules/ranger",
                "${workspaceFolder}/packages/ranger-vscode/out/**/*.js"
            ],
        },
        {
            "name": "Attach to Language Server",
            "type": "node",
            "port": 6009,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/node_modules/langium",
                "${workspaceFolder}/node_modules/ranger",
                "${workspaceFolder}/node_modules/ranger-vscode"
            ]
        },
        {
            "name": "Debug CLI",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/packages/ranger/lib/cli/index.js"
            ]
    }
    ],
    "compounds": [
        {
          "name": "Debug Extension",
          "configurations": ["Run Extension", "Attach to Language Server"],
          "stopAll": true,
        }
      ]
}
